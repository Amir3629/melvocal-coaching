@tailwind base;
@tailwind components;
@tailwind utilities;

/* Custom cursor styles */
.cursor-music {
  cursor: url('/melvocal-coaching/images/music-cursor.png') 16 16, pointer !important;
}

@media (max-width: 768px) {
  .cursor-music {
    cursor: pointer !important;
  }
}

/* Mobile fixes */
@media (max-width: 767px) {
  html, body {
    width: 100% !important;
    max-width: 100% !important;
    overflow-x: hidden !important;
    margin: 0 !important;
    padding: 0 !important;
    background-color: #000000 !important;
  }
  
  section, main, div {
    max-width: 100vw !important;
    box-sizing: border-box !important;
  }
  
  /* Hero section should cover full width */
  .hero-section, 
  [class*="hero"],
  [class*="background"] {
    width: 100vw !important;
    max-width: 100vw !important;
    left: 0 !important;
    right: 0 !important;
    margin-left: 0 !important;
    margin-right: 0 !important;
  }
  
  /* Make sure background images cover the full width */
  .absolute {
    width: 100% !important;
    left: 0 !important;
    right: 0 !important;
  }
  
  img, video {
    max-width: 100% !important;
    width: 100% !important;
    object-fit: cover !important;
  }
  
  .w-full {
    width: 100vw !important;
    max-width: 100vw !important;
  }
  
  /* Fix container padding */
  .container {
    width: 100% !important;
    max-width: 100% !important;
    padding-left: 1rem !important;
    padding-right: 1rem !important;
    margin-left: auto !important;
    margin-right: auto !important;
    box-sizing: border-box !important;
  }
}

/* Specific iPhone fix for black bars */
@media screen and (min-width: 375px) and (max-width: 414px) {
  body {
    width: 100vw !important;
    overflow-x: hidden !important;
  }
  
  section, main, div.relative, div.absolute {
    width: 100vw !important;
    margin: 0 !important;
    padding-left: 0 !important;
    padding-right: 0 !important;
    left: 0 !important;
    right: 0 !important;
  }
  
  /* Fix for hero section */
  [id="hero"] {
    width: 100vw !important;
    max-width: none !important;
    margin: 0 !important;
    left: 0 !important;
  }
  
  /* Ensure all images and background images cover full width */
  img, 
  [style*="background-image"] {
    width: 100vw !important;
    max-width: 100vw !important;
    object-fit: cover !important;
  }
}

/* Ensure sections touch with no gaps */
section + section {
  margin-top: 0;
  padding-top: 0;
}

/* Add consistent dark background */
.bg-\[\#040202\] {
  background-color: #000000;
}

@layer base {
  :root {
    --animation-duration: 300ms;
    --transition-duration: 300ms;
    --card-transition-duration: 200ms;
    --background: #000000;
    --foreground: #ffffff;
    --card: 0 0% 100%;
    --card-foreground: 0 0% 3.9%;
    --popover: 0 0% 100%;
    --popover-foreground: 0 0% 3.9%;
    --primary: #C8A97E;
    --primary-foreground: 0 0% 98%;
    --primary-hover: #B69A6E;
    --secondary: 0 0% 96.1%;
    --secondary-foreground: 0 0% 9%;
    --muted: 0 0% 96.1%;
    --muted-foreground: 0 0% 45.1%;
    --accent: 0 0% 96.1%;
    --accent-foreground: 0 0% 9%;
    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 0 0% 98%;
    --border: 0 0% 89.8%;
    --input: 0 0% 89.8%;
    --ring: 0 0% 3.9%;
    --radius: 0.75rem;
    --font-scale-mobile: 0.875;
    --container-padding-mobile: 1rem;
    --text-opacity: 0.95;
    --header-height: 4rem;
    --header-height-mobile: 3.5rem;
    --safe-area-inset-top: env(safe-area-inset-top, 0px);
    --safe-area-inset-bottom: env(safe-area-inset-bottom, 0px);
    --safe-area-left: env(safe-area-inset-left);
    --safe-area-right: env(safe-area-inset-right);
    /* Text Colors */
    --text-heading: #2A2A2A;
    --text-body: #4A4A4A;
    --text-subtle: #666666;
    --text-legal: #777777;
    --text-link: #8B5E3C;
    /* Scrollbar Colors */
    --scrollbar-track: #111111;
    --scrollbar-thumb: #C8A97E;
    --scrollbar-thumb-hover: #D4AF37;
  }

  /* Custom Scrollbar Styling */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  ::-webkit-scrollbar-track {
    background: var(--scrollbar-track);
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb {
    background: var(--scrollbar-thumb);
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--scrollbar-thumb-hover);
  }

  /* Firefox */
  html {
    scrollbar-color: var(--scrollbar-thumb) var(--scrollbar-track);
    scrollbar-width: thin;
  }

  @media (prefers-reduced-motion) {
    :root {
      --animation-duration: 0ms;
      --transition-duration: 0ms;
      --card-transition-duration: 0ms;
    }
  }

  .dark {
    --background: 0 0% 3.9%;
    --foreground: 0 0% 98%;
    --card: 0 0% 3.9%;
    --card-foreground: 0 0% 98%;
    --popover: 0 0% 3.9%;
    --popover-foreground: 0 0% 98%;
    --primary: 0 0% 98%;
    --primary-foreground: 0 0% 9%;
    --secondary: 0 0% 14.9%;
    --secondary-foreground: 0 0% 98%;
    --muted: 0 0% 14.9%;
    --muted-foreground: 0 0% 63.9%;
    --accent: 0 0% 14.9%;
    --accent-foreground: 0 0% 98%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 0 0% 98%;
    --border: 0 0% 14.9%;
    --input: 0 0% 14.9%;
    --ring: 0 0% 83.1%;
  }

  html {
    font-size: calc(16px * var(--font-scale-mobile));
    -webkit-text-size-adjust: 100%;
    background: var(--background);
    color: var(--foreground);
    scroll-behavior: smooth;
    height: 100%;
    overflow-x: hidden;
    -webkit-tap-highlight-color: transparent;
    max-width: 100vw; /* Ensure full width */
  }

  body {
    @apply bg-black text-white antialiased;
    min-height: 100vh;
    min-height: -webkit-fill-available;
    background: var(--background);
    color: var(--foreground);
    overflow-x: hidden;
    cursor: url('/melvocal-coaching/images/music-cursor.png') 16 16, pointer;
    padding-top: 0;
    padding-bottom: var(--safe-area-inset-bottom);
    font-family: var(--font-roboto);
    font-size: 1.1rem;
    line-height: 1.6;
    font-weight: 300;
    color: #4A4A4A;
    width: 100vw; /* Full width on mobile */
    max-width: 100vw; /* Ensure no overflow */
    margin: 0; /* Remove default margins */
  }

  @supports (-webkit-touch-callout: none) {
    body {
      min-height: -webkit-fill-available;
    }
  }

  @media (min-width: 768px) {
    html {
      font-size: 16px;
    }
    body {
      padding-top: 0;
    }
  }

  /* Typography base styles with responsive adjustments */
  h1, .h1, .hero-title {
    font-family: var(--font-playfair);
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.2;
    color: #2A2A2A;
    margin-bottom: 1.5rem;
  }

  h2, .h2, .section-title {
    font-family: var(--font-playfair);
    font-size: 2.25rem;
    font-weight: 600;
    line-height: 1.3;
    color: #3E3E3E;
    margin-bottom: 1.5rem;
  }

  h3, .h3 {
    font-family: var(--font-playfair);
    font-size: 1.75rem;
    font-weight: 500;
    line-height: 1.4;
    color: #3E3E3E;
    margin-bottom: 1rem;
  }

  h4, .h4 {
    font-family: var(--font-playfair);
    font-size: 1.5rem;
    font-weight: 500;
    line-height: 1.4;
    color: #3E3E3E;
  }

  h5, .h5 {
    font-family: var(--font-playfair);
    font-size: 1.25rem;
    font-weight: 500;
    line-height: 1.4;
    color: #3E3E3E;
  }

  p, .body-text {
    font-family: var(--font-roboto);
    font-size: 1.1rem;
    line-height: 1.6;
    color: #4A4A4A;
    font-weight: 300;
    margin-bottom: 1rem;
  }

  .subtitle {
    font-family: var(--font-roboto);
    font-size: 1.1rem;
    font-weight: 300;
    font-style: italic;
    color: #4A4A4A;
  }

  .caption {
    font-family: var(--font-roboto);
    font-size: 0.95rem;
    color: #666666;
  }

  .legal-text {
    font-family: var(--font-roboto);
    font-size: 0.85rem;
    color: #777777;
    line-height: 1.5;
  }

  /* Brand name specific style */
  .brand-name {
    font-family: var(--font-playfair);
    font-size: 2.5rem;
    font-weight: 700;
    letter-spacing: 0.5px;
    color: #2A2A2A;
  }

  /* Navigation text style */
  .nav-text {
    font-family: var(--font-roboto);
    font-size: 0.95rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #4A4A4A;
  }

  /* Button text style */
  .button-text {
    font-family: var(--font-roboto);
    font-size: 1.2rem;
    font-weight: 500;
    letter-spacing: 0.5px;
    color: #FFFFFF;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  /* Section heading style */
  .section-heading {
    font-family: var(--font-playfair);
    font-size: 2.25rem;
    font-weight: 600;
    line-height: 1.3;
    color: #3E3E3E;
    position: relative;
    padding-bottom: 1.5rem;
    margin-bottom: 2rem;
  }

  .section-heading::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 6rem;
    height: 3px;
    background-color: #8B5E3C;
  }

  /* Quote style */
  blockquote, .quote {
    font-size: 1.1rem;
    color: #5A5A5A;
    border-left: 3px solid #8B5E3C;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
  }

  /* Link style */
  a:not(.button) {
    color: #8B5E3C;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  a:not(.button):hover {
    text-decoration: underline;
  }

  /* Music Genre Tag */
  .genre-tag {
    font-family: 'Roboto Mono', monospace;
    font-size: 0.9rem;
    color: #8B5E3C;
    background: #FFF5EB;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    display: inline-block;
  }

  /* Booking Process Steps */
  .booking-step-title {
    font-size: 1.5rem;
    color: #3E3E3E;
    border-left: 4px solid #8B5E3C;
    padding-left: 1rem;
    margin-bottom: 1rem;
    font-family: var(--font-playfair);
  }

  /* Form Field Styles */
  .form-label {
    font-size: 1rem;
    color: #5A5A5A;
    margin-bottom: 0.5rem;
    display: block;
    font-family: var(--font-roboto);
  }

  .form-placeholder {
    color: #999999;
    font-style: italic;
  }

  /* Responsive typography adjustments */
  @media (max-width: 768px) {
    h1, .h1, .hero-title {
      font-size: 2rem;
      line-height: 1.2;
    }
    
    h2, .h2, .section-title {
      font-size: 1.75rem;
      line-height: 1.3;
    }
    
    h3, .h3 {
      font-size: 1.5rem;
      line-height: 1.4;
    }
    
    body {
      font-size: 1rem;
      line-height: 1.6;
    }
    
    .about-section {
      flex-direction: column;
    }
  }

  /* Tablet optimizations */
  @media (min-width: 768px) and (max-width: 1023px) {
    .section-padding {
      @apply py-16 px-6;
    }

    .container {
      @apply px-6;
    }
  }

  /* Desktop optimizations */
  @media (min-width: 1024px) {
    .section-padding {
      @apply py-20 px-8;
    }

    .container {
      @apply px-8;
    }
  }

  section {
    margin: 0 !important;
    padding: 0 !important;
    width: 100%;
    max-width: 100vw;
    overflow-x: hidden;
  }

  .container {
    @apply px-4 mx-auto max-w-7xl;
  }
}

@layer base {
  * {
    @apply border-border;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  body {
    @apply bg-background text-foreground;
    min-height: 100vh;
    background: var(--background);
    color: var(--foreground);
    overflow-x: hidden;
    cursor: url('/melvocal-coaching/images/music-cursor.png') 16 16, pointer;
    width: 100%;
  }
}

@layer components {
  .heading-underline {
    @apply relative pb-4;
  }

  .heading-underline::after {
    content: "";
    @apply absolute bottom-0 left-1/2 -translate-x-1/2 w-24 h-1 bg-[#C8A97E];
  }

  .parallax-bg {
    @apply bg-fixed bg-center bg-no-repeat bg-cover;
  }

  .glass-effect {
    @apply bg-black/30 backdrop-blur-md;
  }

  .text-shadow {
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .hover-lift {
    @apply transition-transform duration-300 hover:-translate-y-1;
  }

  .gold-gradient {
    background: linear-gradient(135deg, #c8a97e 0%, #b89a6f 100%);
  }

  .dark-gradient {
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.9) 100%);
  }

  .section-spacing {
    @apply py-20 px-4 md:py-32;
  }

  .fixed-nav-button {
    position: fixed !important;
    transform: translateY(-50%) !important;
    transform-style: preserve-3d;
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
    perspective: 1000;
    -webkit-perspective: 1000;
    will-change: transform;
    transition: transform 0.3s ease !important;
  }

  .fixed-nav-button:hover {
    transform: translateY(-50%) scale(1.1) !important;
  }

  .section-padding {
    @apply py-16 md:py-20;
  }

  .heading-xl {
    @apply text-4xl md:text-5xl lg:text-6xl font-display font-bold;
  }

  .heading-lg {
    @apply text-3xl md:text-4xl lg:text-5xl font-display font-bold;
  }

  .heading-md {
    @apply text-2xl md:text-3xl lg:text-4xl font-display font-bold;
  }

  .heading-sm {
    @apply text-xl md:text-2xl lg:text-3xl font-display font-bold;
  }

  .body-lg {
    @apply text-lg md:text-xl;
  }

  .body-base {
    @apply text-base md:text-lg;
  }

  .body-sm {
    @apply text-sm md:text-base;
  }

  /* Section title with single gold line */
  .section-title {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
    display: inline-block;
    width: 100%;
  }

  .section-title h2 {
    font-size: 1.875rem;
    line-height: 2.25rem;
    font-weight: 300;
    display: inline-block;
    margin-left: auto;
    margin-right: auto;
    position: relative;
  }

  @media (min-width: 768px) {
    .section-title h2 {
      font-size: 2.25rem;
      line-height: 2.5rem;
    }
  }

  @media (min-width: 1024px) {
    .section-title h2 {
      font-size: 3rem;
      line-height: 1;
    }
  }

  .section-title h2::after {
    content: '';
    position: absolute;
    bottom: -12px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 2px;
    background-color: #C8A97E;
    opacity: 0.8;
  }

  /* Remove all other gold line styles */
  .heading-underline,
  .section-heading::after,
  .section-heading-container::after {
    display: none;
  }

  /* Legal document modal styling */
  .legal-document-modal {
    @apply p-2;
  }
  
  .legal-document-title {
    @apply text-2xl font-bold mb-4 text-white;
  }

  /* Legal document content styling */
  .legal-document-content {
    color: white !important;
    margin-top: -0.5rem !important;
  }

  .legal-document-content h1,
  .legal-document-content h2,
  .legal-document-content h3,
  .legal-document-content h4,
  .legal-document-content h5,
  .legal-document-content h6,
  .legal-document-content p,
  .legal-document-content li,
  .legal-document-content a,
  .legal-document-content span,
  .legal-document-content div {
    color: white !important;
  }

  .legal-document-content ul, 
  .legal-document-content ol {
    @apply text-gray-200 mb-6 pl-6 leading-relaxed;
  }

  .legal-document-content li {
    @apply mb-2;
  }

  .legal-document-content {
    @apply px-4;
    margin-top: 0 !important;
    padding-top: 0 !important;
  }

  .legal-document-content h1:first-child,
  .legal-document-content h2:first-child,
  .legal-document-content h3:first-child {
    margin-top: 0 !important;
  }

  /* Ensure white text in prose sections */
  .prose {
    @apply text-white;
  }

  .prose p,
  .prose li,
  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    @apply text-white opacity-100;
  }

  /* Dark background specific styles */
  .bg-\[\#040202\] .prose,
  .bg-black .prose {
    @apply text-white;
  }

  .bg-\[\#040202\] .prose p,
  .bg-black .prose p {
    @apply text-white opacity-100;
  }
}

/* Custom section heading styles */
.section-heading {
  @apply text-4xl font-light tracking-wide text-white;
  font-family: var(--font-playfair);
  letter-spacing: 0.03em;
  font-size: 2.5rem;
  font-weight: 600;
  color: var(--foreground);
}

.section-heading-container {
  @apply text-center mb-12 relative;
}

.section-heading-container::after {
  content: '';
  @apply w-12 h-0.5 bg-[#C8A97E] absolute left-1/2 -translate-x-1/2 bottom-0;
  opacity: 0.8;
}

/* Custom scrollbar styling */
.scrollbar-thin::-webkit-scrollbar {
  width: 5px;
}

.scrollbar-thin::-webkit-scrollbar-track {
  background: transparent;
}

.scrollbar-thin::-webkit-scrollbar-thumb {
  background-color: rgba(200, 169, 126, 0.4);
  border-radius: 5px;
}

.scrollbar-thin::-webkit-scrollbar-thumb:hover {
  background-color: rgba(200, 169, 126, 0.6);
}

/* Firefox */
.scrollbar-thin {
  scrollbar-width: thin;
  scrollbar-color: rgba(200, 169, 126, 0.4) transparent;
}

/* Mobile optimizations */
@media (max-width: 768px) {
  .section-heading {
    @apply text-3xl;
    font-size: 2rem;
  }

  .prose {
    font-size: 0.95rem;
  }

  input, textarea, button {
    font-size: 16px !important; /* Prevents iOS zoom on focus */
  }

  /* Improve touch targets */
  button, 
  [role="button"],
  a {
    @apply min-h-[44px] min-w-[44px];
    padding: 0.5rem 1rem;
  }

  .cursor-music {
    cursor: pointer !important;
  }
}

/* Responsive container padding */
.container {
  @apply px-4 md:px-6 lg:px-8;
  padding-left: var(--container-padding-mobile);
  padding-right: var(--container-padding-mobile);
}

@media (min-width: 768px) {
  .container {
    padding-left: 2rem;
    padding-right: 2rem;
  }
}

/* Mobile typography adjustments */
@media (max-width: 767px) {
  /* Typography scaling */
  h1 {
    font-size: 2.25rem !important;
    line-height: 1.2 !important;
  }
  
  h2 {
    font-size: 1.75rem !important;
    line-height: 1.3 !important;
  }
  
  p {
    font-size: 1rem !important;
    line-height: 1.5 !important;
  }

  /* Button sizing */
  .rounded-full {
    padding-left: 1.5rem !important;
    padding-right: 1.5rem !important;
    font-size: 0.875rem !important;
  }

  /* Container padding */
  .container {
    padding-left: 1rem !important;
    padding-right: 1rem !important;
  }

  /* Card scaling */
  .card, [class*="card"] {
    transform: scale(0.95) !important;
  }

  /* Spacing adjustments */
  .space-y-8 > :not([hidden]) ~ :not([hidden]) {
    margin-top: 1.5rem !important;
  }

  .gap-8 {
    gap: 1rem !important;
  }
}

/* Mobile spacing adjustments */
@media (max-width: 767px) {
  section {
    padding-top: 3rem !important;
    padding-bottom: 3rem !important;
  }

  .gap-8 {
    gap: 1rem !important;
  }

  .space-y-6 > :not([hidden]) ~ :not([hidden]) {
    margin-top: 1rem !important;
  }
}

/* Mobile-specific UI adjustments */
@media (max-width: 767px) {
  /* Card and container scaling */
  .grid {
    grid-template-columns: 1fr !important;
  }

  /* Reduce overall card sizes */
  .card, [class*="card"], .rounded-xl {
    max-width: 100% !important;
    width: 100% !important;
    margin-left: auto !important;
    margin-right: auto !important;
    transform: scale(0.95) !important;
  }

  /* Adjust image and logo sizes */
  .aspect-video, 
  img:not(.no-mobile-scale),
  svg:not(.no-mobile-scale) {
    max-width: 85% !important;
    margin-left: auto !important;
    margin-right: auto !important;
  }

  /* Logo specific scaling */
  [class*="logo"], 
  [class*="icon"],
  [class*="badge"] {
    transform: scale(0.85) !important;
  }

  /* Adjust padding and margins */
  .p-6 {
    padding: 0.75rem !important;
  }

  .p-8 {
    padding: 1rem !important;
  }

  .m-6 {
    margin: 0.75rem !important;
  }

  .m-8 {
    margin: 1rem !important;
  }

  /* Container width adjustments */
  .container,
