    gap: 0.75rem;
  }
  
  .mobile-menu-item {
    width: 100%;
    text-align: center;
    padding: 0.5rem;
  }

  /* Fix for gallery on mobile */
  .gallery-container {
    grid-template-columns: 1fr;
  }
  
  .gallery-image {
    width: 100%;
    height: auto;
    max-height: 300px;
    object-fit: cover;
  }

  /* Fix for contact form on mobile */
  .contact-form input,
  .contact-form textarea,
  .contact-form select {
    width: 100%;
    padding: 0.75rem;
  }
  
  .form-grid {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
}

/* Fixes for very small devices */
@media (max-width: 480px) {
  /* Fix for hero section text on very small devices */
  .hero-title {
    font-size: 1.75rem !important;
    line-height: 2rem !important;
  }
  
  .hero-subtitle {
    font-size: 1rem !important;
    line-height: 1.5rem !important;
  }

  /* Improve button spacing on small screens */
  .btn {
    padding: 0.5rem 1rem;
    margin: 0.25rem;
    font-size: 0.875rem;
  }

  /* Adjust spacing for stacked elements */
  h1, h2, h3, h4, h5, h6 {
    margin-bottom: 0.75rem;
  }

  p {
    margin-bottom: 1rem;
  }

  /* Ensure images don't overflow */
  img {
    max-width: 100%;
    height: auto;
  }
}

/* Ensure sections touch with no gaps */
section + section {
  margin-top: 0;
  padding-top: 0;
}

/* Add consistent dark background */
.bg-\[\#040202\] {
  background-color: #000000;
}

/* Improved spacing for navigation on tablets */
@media (min-width: 768px) and (max-width: 1023px) {
  .nav-links {
    gap: 0.75rem;
  }
  
  .nav-link {
    padding: 0.5rem 0.75rem;
  }
}

/* Adjust for landscape orientation on mobile */
@media (max-width: 767px) and (orientation: landscape) {
  .hero-section {
    min-height: 450px;
    padding-top: 2rem;
    padding-bottom: 2rem;
  }
  
  .section-content {
    padding-top: 2rem;
    padding-bottom: 2rem;
  }
} 
